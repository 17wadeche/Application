{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["ES2022", "DOM"],
    "outDir": "dist-electron",
    "rootDir": "electron",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmitOnError": true,
    "strict": true
  },
  "include": ["electron/**/*.ts"]
}