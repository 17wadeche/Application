{
  "name": "BalanceTrack",
  "description": "Modern finance tracking for personal & business",
  "author": "Chey Wade",
  "version": "0.1.0",
  "type": "module",
  "build": {
    "appId": "com.yourcompany.balancetrack",
    "productName": "BalanceTrack",
    "directories": { "output": "release", "buildResources": "build" },
    "files": [
      "dist/**",
      "dist-electron/**",
      "package.json",
      "!node_modules/.cache"
    ],
    "asar": true,
    "win": {
      "target": ["MSIX", "appx", "msi" ],
      "icon": "build/icon.png",
      "publisherName": "Chey Wade"
    },
    "appx": {
      "identityName": "YourCompany.BalanceTrack",
      "publisherDisplayName": "Your Company",
      "publisherName": "Chey Wade",
      "backgroundColor": "#0f172a",
      "languages": ["en-US"],
      "capabilities": ["internetClient"]
    }
  },
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "concurrently -k \"vite\" \"wait-on http://localhost:5173 && cross-env VITE_DEV=1 electron .\"",
    "build:web": "vite build",
    "build:electron": "tsc -p tsconfig.electron.json",
    "dist:msix": "npm run build:web && npm run build:electron && electron-builder --win appx",
    "dist:msi": "npm run build:web && npm run build:electron && electron-builder --win msi"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "recharts": "^2.12.7"
  },
  "devDependencies": {
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^38.2.0",
    "electron-builder": "^26.0.12",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.14",
    "typescript": "^5.5.4",
    "vite": "^5.4.8",
    "vite-plugin-pwa": "^0.20.5",
    "wait-on": "^9.0.1"
  }
}